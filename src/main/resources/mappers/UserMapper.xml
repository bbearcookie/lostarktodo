<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lostarktodo.mapper.UserMapper">
	<sql id="userColumns">
		idx,
		userid,
		password,
		role
	</sql>
	
	<insert id="insertUser" parameterType="UserDTO">
		INSERT INTO user (
			<include refid="userColumns"/>
		) VALUES (
			#{idx},
			#{userid},
			#{password},
			#{role}
		)
	</insert>
	
	<select id="checkWhetherExistID" parameterType="String" resultType="int">
		SELECT
			COUNT(*)
		FROM
			user
		WHERE
			userid = #{userid}
	</select>
	
	<select id="findByUserid" parameterType="String" resultType="UserDTO">
		SELECT
			<include refid="userColumns"/>
		FROM
			user
		WHERE
			userid = #{userid}
	</select>
</mapper>